@{
    ViewData["Title"] = "Login Page";
}
<section class="contact_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2>
                @_localization.GetKey("signIn").Value
            </h2>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form_container contact-form">
                    @model HospitalProject.Models.LoginViewModel
                    <form asp-controller="User" asp-action="Login" method="post">
                        <div class="form-row">
                            <div class="col-lg-6">
                                <div>
                                    <label asp-for="Email"></label>
                                    <input asp-for="Email" placeholder="@_localization.GetKey("email").Value" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div>
                                    <label asp-for="Password"></label>
                                    <input asp-for="Password" type="password" placeholder="@_localization.GetKey("password").Value" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-lg-12">
                                <div style="display: flex; align-items: center;">
                                    <label class="form-check-label" asp-for="RememberMe" style="margin-left: auto;">@_localization.GetKey("rememberMe").Value</label>
                                    <input class="form-check-input" asp-for="RememberMe" style="margin-left: 5px; transform: scale(0.4);" />
                                </div>
                            </div>
                        </div>
                        <div class="btn_box">
                            <button type="submit">
                                @_localization.GetKey("login").Value
                            </button>
                        </div>
                        <div class="btn_box">
                            <button type="button" style="background-color:#ffffff; color:#1fab89; margin-top:3%"
                                    onmouseover="this.style.color='#ffffff'; this.style.backgroundColor='#1fab89'"
                                    onmouseout="this.style.color='#1fab89'; this.style.backgroundColor='#ffffff'"
                                    onclick="signIn()">
                                @_localization.GetKey("signUp").Value
                            </button>
                        </div>
                        <!-- Add this within the <form> tag -->
                        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                        {
                            <script>
                                $(document).ready(function () {
                                    $('#errorMessage').text('@Html.Raw(ViewBag.ErrorMessage)');
                                    $('#errorModal').modal('show');
                                });
                            </script>
                        }
                    </form>

                    <script>
                        function signIn() {
                            window.location.href = '@Url.Action("Register", "User")';
                        }
                    </script>
                </div>
            </div>
            <div class="col-md-6">
                <div class="map_container">
                    <div class="map">
                        <div id="googleMap"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
