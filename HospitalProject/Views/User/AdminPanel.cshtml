@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Hospital Admin Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
        @foreach (var day in Enum.GetValues(typeof(DayOfWeek)))
        {
            <text>
                    flatpickr('#workingHoursInput_@day', {
                        enableTime: true,
                        noCalendar: true,
                        dateFormat: 'H:i',
                        time_24hr: true
                    });
            </text>
        }
                            });
    </script>
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            display: flex;
        }

        aside {
            width: 200px;
            background-color: green;
            background-size: cover; /* Ensure the background image covers the entire element */
            padding: 20px;
            box-sizing: border-box;
        }

        div.container-fluid {
            display: flex;
        }

        main {
            flex: 1;
            padding: 20px;
            box-sizing: border-box;
        }

        section {
            height: 100vh;
            display: none;
            align-items: center;
            justify-content: center;
            font-size: 2em;
            margin-bottom: 20px;
            border-bottom: 1px solid #ccc;
        }

        nav ul {
            list-style: none;
            padding: 5%;
        }

        nav li {
            margin-bottom: 5%;
        }

        nav a {
            text-decoration: none;
            color: #fff;
            font-size: 1.2em;
            display: block;
            padding: 5px;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

            nav a:hover {
                background-color: #555;
            }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #4CAF50;
            color: white;
        }
    </style>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault(); // Prevent the default behavior of the anchor link

                    const targetSectionId = this.getAttribute('href').substring(1);
                    const targetSection = document.getElementById(targetSectionId);

                    document.querySelectorAll('section').forEach(section => {
                        section.style.display = 'none';
                    });

                    targetSection.style.display = 'flex';
                });
            });
        });
    </script>
</head>


<body>
    <div class="container-fluid">
        <div style="position: absolute; top: 20px; right: 20px; z-index: 1000;">
            <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Localization
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <a asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="en-US" class="dropdown-item">
                        <i class="flag-icon flag-icon-gb"></i> English
                    </a>
                    <a asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="tr-TR" class="dropdown-item">
                        <i class="flag-icon flag-icon-tr"></i> Türkçe
                    </a>
                </div>
            </div>
        </div>

        <div style="display: flex;">
            <aside>
                <nav>
                    <ul>
                        <li><a href="#section1">@_localization.GetKey("departments").Value</a> </li>
                        <li><a href="#section2">@_localization.GetKey("doctors").Value</a></li>
                        <li><a href="#section3">@_localization.GetKey("patients").Value</a></li>
                        <li><a href="#section4">@_localization.GetKey("appointment").Value</a></li>
                        <li><a href="#section5">@_localization.GetKey("settings").Value</a></li>
                    </ul>
                </nav>
            </aside>

            <section id="section1" style="display: flex;">
                @model AdminViewModel
                <!-- Button to open the modal -->
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#DepartmentRegistrationModal">
                    @_localization.GetKey("depRegButton").Value
                </button>
                <div class="modal fade" id="DepartmentRegistrationModal" tabindex="-1" role="dialog" aria-labelledby="DepartmentRegistrationModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="DepartmentRegistrationModalLabel">@_localization.GetKey("depRegButton").Value</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body" id="departmentModalContent">
                                <form asp-controller="Admin" asp-action="DepartmentRegister"
                                      method="post" data-val="true" data-val-method="Validate" id="Form">
                                    <div class="form-group">
                                        <label for="DepartmentName">@_localization.GetKey("depName").Value</label>
                                        <input asp-for="department.DepartmentName" class="form-control" />
                                        <span asp-validation-for="department.DepartmentName" class="text-danger"></span>   
                                        <span data-valmsg-for="department.DepartmentName" class="text-danger"></span>

                                    </div>

                                    <div class="form-group">
                                        <label for="PhoneNumber">@_localization.GetKey("phone").Value</label>
                                        <input asp-for="department.PhoneNumber" class="form-control" />
                                        <span asp-validation-for="department.PhoneNumber" class="text-danger"></span>
                                        <span data-valmsg-for="department.PhoneNumber" class="text-danger"></span>
                                    </div>

                                    <button type="submit" class="btn btn-primary">@_localization.GetKey("register").Value</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <table>
                    <thead>
                        <tr>
                            <th>@_localization.GetKey("depName").Value</th>
                            <th>@_localization.GetKey("depId").Value</th>
                            <th>@_localization.GetKey("phone").Value</th>
                            <th>@_localization.GetKey("events").Value</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Departments != null && Model.Departments.Count > 0)
                        {
                            @foreach (var department in Model.Departments)
                            {
                                <tr>
                                    <td>@department.DepartmentName</td>
                                    <td>@department.DepartmentId</td>
                                    <td>@department.PhoneNumber</td>
                                    <td>
                                        <a asp-controller="Admin" asp-action="DepartmentEdit" asp-route-id="@department.DepartmentId">Edit</a>
                                        <a asp-controller="Admin" asp-action="DepartmentView" asp-route-id="@department.DepartmentId">View</a>
                                        <a asp-controller="Admin" asp-action="DepartmentRemove" asp-route-id="@department.DepartmentId"
                                           onclick="return confirm('Are you sure you want to remove this department?')">Remove</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4">@_localization.GetKey("noRecord").Value</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </section>
        </div>

        <section id="section2" style="display: none;">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#DoctorRegistrationModal">
                @_localization.GetKey("docRegButton").Value
            </button>
            <div class="modal fade" id="DoctorRegistrationModal" tabindex="-1" role="dialog" aria-labelledby="DoctorRegistrationModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="DoctorRegistrationModalLabel">@_localization.GetKey("docRegButton").Value</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body" id="doctorModalContent">
                            <form asp-controller="Admin" asp-action="DoctorRegister" method="post">
                                <div class="form-group">
                                    <label for="DoctorName">@_localization.GetKey("firstName").Value</label>
                                    <input asp-for="doctor.Name" class="form-control" />
                                    <span asp-validation-for="doctor.Name" class="text-danger"></span>
                                    <span data-valmsg-for="doctor.Name" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label for="DoctorSurname">@_localization.GetKey("lastName").Value</label>
                                    <input asp-for="doctor.Surname" class="form-control" />
                                    <span asp-validation-for="doctor.Surname" class="text-danger"></span>
                                    <span data-valmsg-for="doctor.Surname" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label for="DoctorDepartment">@_localization.GetKey("docDep").Value</label>
                                    <select asp-for="doctor.DepartmentId" asp-items="@ViewBag.AvailableDepartments" class="form-control">
                                        <option value="">@_localization.GetKey("docDepSelect").Value</option>
                                    </select>
                                    <span asp-validation-for="doctor.DepartmentId" class="text-danger"></span>
                                    <span data-valmsg-for="doctor.DepartmentId" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label for="DoctorMail">@_localization.GetKey("email").Value</label>
                                    <input asp-for="doctor.Email" class="form-control" />
                                    <span asp-validation-for="doctor.Email" class="text-danger"></span>
                                    <span data-valmsg-for="doctor.Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label for="DoctorPassword">@_localization.GetKey("password").Value</label>
                                    <input asp-for="doctor.Password" class="form-control" />
                                    <span asp-validation-for="doctor.Password" class="text-danger"></span>
                                    <span data-valmsg-for="doctor.Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="doctor.WorkingHoursPerWeek" class="control-label">Working Hours</label>
                                    <div>
                                        <div>
                                            <label>Start Hour:</label>
                                            <select id="startHour" class="form-control">
                                                @for (int i = 0; i <= 23; i++)
                                                {
                                                    <option value="@i">@i:00</option>
                                                }
                                            </select>
                                        </div>
                                        <div>
                                            <label>End Hour:</label>
                                            <select id="endHour" class="form-control">
                                                @for (int i = 0; i <= 23; i++)
                                                {
                                                    <option value="@i">@i:00</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary">@_localization.GetKey("register").Value</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <table>
                <thead>
                    <tr>
                        <th>@_localization.GetKey("fullName").Value</th>
                        <th>@_localization.GetKey("docId").Value</th>
                        <th>@_localization.GetKey("email").Value</th>
                        <th>@_localization.GetKey("depName").Value</th>
                        <th>@_localization.GetKey("events").Value</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Add rows with doctor information here -->
                    @if (Model != null && Model.Doctors != null && Model.Doctors.Count > 0)
                    {
                        @foreach (var doctor in Model.Doctors)
                        {
                            <tr>
                                <td>@doctor.FullName</td>
                                <td>@doctor.Id</td>
                                <td>@doctor.Email</td>
                                <td>@doctor.Department.DepartmentName</td>
                                <td>
                                    <a asp-controller="Admin" asp-action="DoctorEdit" asp-route-id="@doctor.Id">Edit</a>
                                    <a asp-controller="Admin" asp-action="DoctorView" asp-route-id="@doctor.Id">View</a>
                                    <a asp-controller="Admin" asp-action="DoctorRemove" asp-route-id="@doctor.Id"
                                       onclick="return confirm('Are you sure you want to remove this doctor?')">Remove</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4">@_localization.GetKey("noRecord").Value</td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>

        <section id="section3" style="display: none;">Patients</section>

        <section id="section4" style="display: none;">Appointments</section>

        <section id="section5" style="display: none;">Settings</section>

    </div>
    <footer>
        <p>Copyright &copy; 2023</p>
    </footer>
    <div>
        @await Html.PartialAsync("_CommonScripts")
    </div>
</body>
</html>