@model Doctor
@using Microsoft.AspNetCore.Mvc.Rendering

<form asp-controller="Admin" asp-action="DoctorRegister" method="post">
    <!-- Add your form fields here -->
    <div class="form-group">
        <label for="DoctorId">@_localization.GetKey("docId").Value</label>
        <input asp-for="DoctorId" class="form-control" />
        <span asp-validation-for="DoctorId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="DoctorFirstName">@_localization.GetKey("firstName").Value</label>
        <input asp-for="DoctorFirstName" class="form-control" />
        <span asp-validation-for="DoctorFirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="DoctorLastName">@_localization.GetKey("lastName").Value</label>
        <input asp-for="DoctorLastName" class="form-control" />
        <span asp-validation-for="DoctorLastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Department">@_localization.GetKey("docDep").Value</label>
        <select asp-for="DepartmentId" asp-items="@ViewBag.AvailableDepartments" class="form-control">
            <option value="">@_localization.GetKey("docDepSelect").Value</option>
        </select>
        <span asp-validation-for="DepartmentId" class="text-danger"></span>
    </div>

    <!-- Add a calendar control for setting working hours -->
    <div class="form-group">
        <label for="WorkingHours">Working Hours</label>
        <!-- Add your calendar control here -->
        <!-- You may use a JavaScript library like FullCalendar or another suitable library for this purpose -->
        <!-- Alternatively, you can use input fields for start and end times -->
        <!-- For simplicity, I'll use simple text inputs here -->
        <input type="text" name="StartTime" placeholder="Start Time" class="form-control" />
        <input type="text" name="EndTime" placeholder="End Time" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
</form>
