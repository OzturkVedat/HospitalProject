@{
    Layout = "_PatientLayout.cshtml";
}

<section id="section3" style="display: flex; flex-direction: column; align-items: center;">
    @model Patient
    <h2 style="margin-bottom: 20px;">@_localization.GetKey("userDetails").Value</h2>

    <dl style="width: 300px;">
        <dt>@_localization.GetKey("firstName").Value</dt>
        <dd>@Model.Name</dd>

        <dt>@_localization.GetKey("lastName").Value</dt>
        <dd>@Model.Surname</dd>

        <dt>@_localization.GetKey("email").Value</dt>
        <dd>@Model.Email</dd>
    </dl>

</section>
